@using WebAppMVCLesson1.NewAdmin.Modals
@model WebAppMVCLesson1.NewAdmin.Modals.TeamWork
@{
    List<JobPosition> jp = ViewBag.JobPositions;
}
<style>
    .col-md-6{
        margin-bottom: 20px;
    }
</style>
<p style="color:red">@ViewBag.ErrorMessage</p>
<form asp-action="AddTeam" asp-controller="Team" method="post" enctype="multipart/form-data">
    <div>
    <div class="col-md-4">FirstName</div>
    <div class="col-md-6">
        <input class="class-form" type="text" asp-for="FirstName"/>
    </div>

    <div class="col-md-4">MiddleName</div>
    <div class="col-md-6">
        <input class="class-form" type="text" asp-for="MiddleName"/>
    </div>

    <div class="col-md-4">LastName</div>
    <div class="col-md-6">
         <input class="class-form" type="text" asp-for="LastName"/>
    </div>

    <div class="col-md-4">AboutWork</div>
    <div class="col-md-6">
         <textarea type="text" asp-for="AboutWork"></textarea>
    </div>

    <div class="col-md-4">Status</div>
    <div class="col-md-6">
         <select class="class-form" asp-for="Status">
                @foreach(JobPosition item in jp)
                {
                    <option value="@item.Id">@item.Name</option>
                }
                <option value="0">True</option>
             <option value="1">InActive</option>
         </select>
    </div>

    <div class="col-md-4">LinkedIn</div>
    <div class="col-md-6">
         <input class="class-form" type="text" asp-for="LinkedIn"/>
    </div>

    <div class="col-md-4">Instagram</div>
    <div class="col-md-6">
         <input class="class-form" type="text" asp-for="Instagram"/>
    </div>

    <div class="col-md-4">Facebook</div>
    <div class="col-md-6">
         <input class="class-form" type="text" asp-for="Facebook"/>
    </div>

    <div class="col-md-4">Photo</div>
    <div class="col-md-6">
         <input class="class-form" type="file" asp-for="Photo"/>
    </div>
</div>
<span></span>
<button type="submit" class="btn-danger">SUBMIT</button>
</form>
