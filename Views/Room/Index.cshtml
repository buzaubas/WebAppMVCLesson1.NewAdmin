@using WebAppMVCLesson1.NewAdmin.Modals
@model List<Room>

<table>
    <thead>
        <tr>
            <td>Name</td>
            <td>Description</td>
            <td>Price</td>
            <td>Create Date</td>
            <td>Create User</td>
            <td>IsAvailable</td>
            <td>RoomNumber</td>
        </tr>
    </thead>
    <tbody>
        @foreach(Room item in Model)
        {
            <tr>
                <td>@item.RoomId</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.CreateDate</td>
                <td>@item.CreateUser</td>
                <td>@item.IsAvailable</td>
                <td>@item.RoomNumber</td>
                <td>
                    @*Room/EditRoom/Id/44214*@
                    <a asp-action="EditRoom" asp-controller="Room" asp-route-Id="@item.RoomId">Edit Room</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />
<a asp-action="AddRoom" asp-controller="Room">Add Room</a>
